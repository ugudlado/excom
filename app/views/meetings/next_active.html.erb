<p id="notice"><%= notice %></p>

<%= form_with(model: @meeting, :url => {:action => 'vote', :id =>@meeting.id}, :html => {:method => "post"}, local: true) do |form| %>
  
  <h4>Hello <%= current_member.name %>! <h4>

  <h3>Meeting date: <%= @meeting.start_date %></h3> 

  <p/>
  <%= render 'vote_panel', locals: {title: 'Prepared speakers',role: 'Prepared speaker',meeting: @meeting} %>

  <%= render 'vote_panel', locals: {title: 'Table topic speakers',role: 'Table topic speaker',meeting: @meeting} %>

  <%= render 'vote_panel', locals: {title: 'Evaluators',role: 'Evaluator',meeting: @meeting} %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">General Feedback</h3>
    </div>
    <div class="panel-body">
      <%= text_area_tag 'feedback' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Vote"%>
  </div>
<% end %>